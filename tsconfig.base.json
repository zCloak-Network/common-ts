{
  "extends": "@zcloak/dev/config/tsconfig.json",
  "compilerOptions": {
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "composite": false,
    "jsx": "react",
    "paths": {
      "@zcloak/contracts-core": ["contracts-core/src"],
      "@zcloak/contracts-core/*": ["contracts-core/src/*"],
      "@zcloak/react-wallet": ["react-wallet/src"],
      "@zcloak/react-wallet/*": ["react-wallet/src/*"],
      "@zcloak/service": ["service/src"],
      "@zcloak/service/*": ["service/src/*"],
      "@zcloak/web3-query": ["web3-query/src"],
      "@zcloak/web3-query/*": ["web3-query/src/*"],
    },
    "skipLibCheck": true
  }
}
