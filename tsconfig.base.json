{
  "extends": "@zcloak/dev/config/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "paths": {
      "@zcloak/example": ["example/src"],
      "@zcloak/example/*": ["example/src/*"],
      "@zcloak/contracts-core": ["contracts-core/src"],
      "@zcloak/contracts-core/*": ["contracts-core/src/*"],
      "@zcloak/credential-core": ["credential-core/src"],
      "@zcloak/credential-core/*": ["credential-core/src/*"],
      "@zcloak/did-keyring": ["did-keyring/src"],
      "@zcloak/did-keyring/*": ["did-keyring/src/*"],
      "@zcloak/extension-core": ["extension-core/src"],
      "@zcloak/extension-core/*": ["extension-core/src/*"],
      "@zcloak/react-wallet": ["react-wallet/src"],
      "@zcloak/react-wallet/*": ["react-wallet/src/*"],
      "@zcloak/service": ["service/src"],
      "@zcloak/service/*": ["service/src/*"],
      "@zcloak/ui-did-keyring": ["ui-did-keyring/src"],
      "@zcloak/ui-did-keyring/*": ["ui-did-keyring/src/*"],
      "@zcloak/ui-store": ["ui-store/src"],
      "@zcloak/ui-store/*": ["ui-store/src/*"],
      "@zcloak/web3-query": ["web3-query/src"],
      "@zcloak/web3-query/*": ["web3-query/src/*"],
    },
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
